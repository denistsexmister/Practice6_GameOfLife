<Page
    x:Class="Practice6_GameOfLife.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Practice6_GameOfLife"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel VerticalAlignment="Center">
        <TextBlock Text="Conway's Game of Life" HorizontalAlignment="Center"
                   Margin="0 0 0 100" FontSize="32"/>
        <Button x:Name="play_button" Content="Play" HorizontalAlignment="Center"
                MinWidth="100" MinHeight="40" Click="play_button_Click"
                Margin="10 10 10 10"/>
        <Button x:Name="settings_button" Content="Settings" HorizontalAlignment="Center"
                MinWidth="100" MinHeight="40" Click="settings_button_Click"
                Margin="10 10 10 10"/>
        <Button x:Name="exit_button" Content="Exit" HorizontalAlignment="Center"
                MinWidth="100" MinHeight="40" Click="exit_button_Click"
                Margin="10 10 10 10"/>
    </StackPanel>
</Page>
